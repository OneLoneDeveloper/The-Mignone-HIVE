<style>
        :root {
                /* Scale factor (just change this to resize everything) */
                --scale: 1.5;

                /* Base size of hexagon (side length) */
                --programs-side: calc(60px * var(--scale));

                /* Derived dimensions */
                --programs-long-diameter: calc(var(--programs-side) * 2);            /* flat-to-flat width */
                --programs-short-diameter: calc(var(--programs-side) * 1.732);       /* point-to-point height (â‰ˆ sqrt(3)) */
                --programs-protrusion: calc(var(--programs-side) * 0.5);             /* horizontal overlap */
                --programs-gap: calc(5px * var(--scale));
        }

        .hexagon-grid {  
                display: grid;
                justify-content: center;
                grid-template-columns: repeat(2, var(--programs-short-diameter));
                gap: var(--programs-gap);
                margin-bottom: calc(var(--programs-short-diameter) / 2);
        }

        .hexagon-grid > div {
                position: relative;
                width: var(--programs-long-diameter);
                height: var(--programs-long-diameter);
                background-color: red;
        }

        .hexagon-grid > div:nth-of-type(even) { top: calc((var(--programs-short-diameter) + var(--programs-gap)) / 2); }



</style>

<section>
        <div class="hexagon-grid">
                <div class="hexagon hexagon-flat"></div>
                <div class="hexagon hexagon-flat"></div>
                <div class="hexagon hexagon-flat"></div>
                <div class="hexagon hexagon-flat"></div>
                <div class="hexagon hexagon-flat"></div>
        </div>
</section>